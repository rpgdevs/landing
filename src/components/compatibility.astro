---
import CompatibilityList from "~/components/compatibility-list.astro";
import ContentSection from "~/components/content-section.astro";
import type { RPGBenefit } from "~/types";
import { getI18N } from "~/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const descriptionsSpanish: Array<RPGBenefit> =
  [
  {
    title: "1. Experiencia Innovadora",
    description:
      "Innovamos constantemente, brindando soluciones digitales que superan expectativas y transforman la experiencia empresarial.",
  },
  {
    title: "2. Enfoque Centrado en el Cliente",
    description:
      "Priorizamos sus necesidades. Un enfoque personalizado garantiza que cada solución impulse el éxito de su negocio.",
  },
  {
    title: "3. Rendimiento Probado",
    description:
      "Nuestro historial de éxitos demuestra nuestra capacidad para generar resultados tangibles y sostenibles para nuestros clientes.",
  },
  {
    title: "4. Agilidad y Adaptabilidad",
    description:
      "Respondemos rápidamente a las cambiantes demandas del mercado, asegurando que su empresa siempre esté un paso adelante.",
  },
  {
    title: "5. Compromiso con la Excelencia",
    description:
      "Nos esforzamos por la excelencia en cada aspecto, desde la implementación hasta el soporte continuo, garantizando su satisfacción duradera.",
  },
];

const descriptionsEnglish: Array<RPGBenefit> =
  [
  {
    title: "1. EXPERIENCE INNOVATING ",
    description:
      "We are constantly innovating to deliver digital solutions that exceed expectations and transform the working experience..",
  },
  {
    title: "2. CUSTOMER DRIVEN",
    description:
      "Your needs are our top priority, we aim to have you as a long-lasting business partner. Your success will determine ours.",
  },
  {
    title: "3. PROVEN EFFICIENCY",
    description:
      "Our success history proves our capability to deliver sustainable and opportune solutions.",
  },
  {
    title: "4. AGILE AND ADAPTABLE",
    description:
      "We adapt quickly to changes during the projects; this allows us to deliver the proper solution in time.",
  },
  {
    title: "5. COMPROMISED WITH EXCELENCE",
    description:
      "We go the extra mile from development to support in order to ensure your satisfaction.",
  },
];

const items = currentLocale == 'es' ? descriptionsSpanish : descriptionsEnglish;

---

<ContentSection title={i18n.Compatibility.title} id="compatibility">
  <Fragment slot="lead">
    {i18n.Compatibility.description} <span class="text-primary"
      > {i18n.Compatibility.description2}</span
    > {i18n.Compatibility.description3}
  </Fragment>
  <CompatibilityList items={items} />
</ContentSection>
