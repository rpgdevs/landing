---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Consultoria",
    description:
      "Asesoría comercial y de ingeniería, inteligencia de negocios ,y consultoría Transformación digital",
    icon: "mdi:handshake",
  },
  {
    title: "Desarollo Software",
    description: "Desarrollo backend, web, mobile y IoT",
    icon: "mdi:devices",
  },
  {
    title: "Implementacion",
    description:
      "Instalación de tecnología, configuración de tecnología y soporte técnico",
    icon: "mdi:cogs",
  },
  {
    title: "Infraestructura",
    description:
      "Nos destacamos en la creación de infraestructuras empresariales, proporcionando redes cableadas, inalámbricas o híbridas según sus requisitos.",
    icon: "mdi:desktop-classic",
  },
  {
    title: "Staffing",
    description:
      "Personal calificado bilingüe segun el idioma que necesite y con la experiencia que necesite",
    icon: "mdi:account-multiple-check-outline",
  },
];
---

<ContentSection title="Servicios" id="features">
  <Fragment slot="lead">
    Ofrecemos servicios <span class="text-primary">personalizados</span>.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="h-16 w-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
